<DownTabButton@Button>:
    size_hint: 1, None

<Separator@Label>:
    size_hint: 0.2, None

<MangaPopup>:
    title: 'Title here'
    size_hint: 1.0, 0.6

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: message
            text: 'Message here'
            size_hint: 1.0, 1.0
        BoxLayout:
            spacing: 10
            size_hint_x: 0.7
            pos_hint: {'center_x': .5}
            padding: 0, 0, 0, 15
            Button:
                text: 'Ok'
                size_hint: 1.0, 0.3
                on_press: root.on_press_ok()

            Button:
                text: 'Cancel'
                size_hint: 1.0, 0.3
                on_press: root.on_press_dismiss()

<MangaDownloader>:
    mangaDownloader: mangaDownloader
    id: mangaDownloader
    #size_hint: .5, .5
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Mangas'
        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                Splitter:
                    sizable_from: 'right'
                    strip_size: 8
                    size_hint_x: 0.5

                    BoxLayout:
                        orientation: 'vertical'
                        #size_hint: 0.2, 1
                        Button:
                            id: getMangaList
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'
                            #size_hint: 0.2, None
                            size_hint_y: None
                            height: 50
                            text: " Get Manga List"

                        ListView:
                            #size_hint: 0.2, 1
                            id: mangaList
                            adapter: root.list_adapter

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        id: labelManga
                        text: "Select a Manga on the left"
                        halign: 'left'
                        valign: 'top'
                        size_hint: 1, 0.2

                        canvas.before:
                            Color:
                                rgba: 0.2, 0.2, 0.2, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        #text_size: self.size
                    ScreenManager:
                        id: mangasScreenManager
                        Screen:
                            name: 'InitialScreen'
                            Label:
                                text: 'Select a Manga from the list to get a list of available chapters'
                        Screen:
                            name: 'ChapterListProgress'
                            Label:
                                text: 'Getting Chapter List'
                        Screen:
                            name: 'ChapterList'
                            BoxLayout:
                                orientation: 'vertical'
                                BoxLayout:
                                    canvas:
                                        Color:
                                            rgba: 0.5, 0.5, 0.5, 1
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                    ListView:
                                        #size_hint: 0.2, 1
                                        id: chapterList
                                        adapter: root.chapterlist_adapter
                                BoxLayout:
                                    size_hint: 1, 0.1
                                    padding: 2, 4, 2, 2
                                    Button:
                                        id: selectNew
                                        text: 'Select New'
                                    Button:
                                        id: downloadNew
                                        text: 'Download New'
                                    Button:
                                        id: selectAllChapters
                                        text: 'Select All'
                                    Button:
                                        id: clearAllChapters
                                        text: 'Clear All'
                                BoxLayout:
                                    size_hint: 1, 0.2
                                    padding: 2, 0, 2, 0
                                    Button:
                                        id: downloadChapters
                                        text: 'Download Chapters'
            BoxLayout:
                size_hint_y: None
                height: 25
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    size_hint: None, None
                    height: 25
                    text: 'Status:'
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    width: 65
                    padding_x: -10
                Label:
                    id: status
                    size_hint_y: None
                    height: 25
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    markup: True

    TabbedPanelItem:
        text: 'Downloads'
        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                size_hint: 1, None
                DownTabButton:
                    id: pauseDownloadSession
                    text: 'Pause'
                DownTabButton:
                    id: resumeDownloadSession
                    text: 'Resume'
                DownTabButton:
                    id: removeDownloadSession
                    text: 'Remove'
                Separator:
                DownTabButton:
                    id: pauseAllDownloadSession
                    text: 'Pause All'
                DownTabButton:
                    id: resumeAllDownloadSession
                    text: 'Resume All'
                DownTabButton:
                    id: removeAllDownloadSession
                    text: 'Remove All'
            Label:
                size_hint: 1, None
                height: 10
            ListView:
                id: downloadList
                adapter: root.downloadlist_adapter
            BoxLayout:
                size_hint: 0.7, None
                spacing: 10
                pos_hint: {'center_x': .5}
                #padding: 0, 0, 0, 15
                DownTabButton:
                    id: selectAllDownloadSession
                    pos_hint: {'center_y': .5}
                    size_hint: 1, 0.5
                    text: 'Select All'
                DownTabButton:
                    id: clearAllDownloadSession
                    pos_hint: {'center_y': .5}
                    size_hint: 1, 0.5
                    text: 'Clear All'

    TabbedPanelItem:
        id: optionTab
        text: 'Options'
